<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".Fragment.ZDetailedFragment">

    <TextView
        android:id="@+id/timer_detailedfragment"
        android:layout_width="398dp"
        android:layout_height="164dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/timer_default"
        android:textSize="150sp"
        app:layout_constraintBottom_toTopOf="@id/exercisename_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/exercisename_textview"
        android:layout_width="113dp"
        android:layout_height="26dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="284dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/viewpager_imageview_exercise"
        android:layout_width="351dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/exercise_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exercisename_textview" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="198dp"
        android:layout_height="37dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="8dp"
        android:outlineSpotShadowColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewpager_imageview_exercise"
        tools:ignore="UnusedAttribute" />

    <ImageButton
        android:id="@+id/youtubeButton"
        android:layout_width="47dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewpager_imageview_exercise"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />


</android.support.constraint.ConstraintLayout>