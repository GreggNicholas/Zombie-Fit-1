<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="@dimen/margin_top"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/listworkoutsfragment_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cardview_height"
        android:layout_marginStart="@dimen/cardview_margin_ends"
        android:layout_marginEnd="@dimen/cardview_margin_ends"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/cardview_corner">

        <TextView
            android:id="@+id/workout_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/workout_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:contentDescription="@string/Workout" />

    </android.support.v7.widget.CardView>
</LinearLayout>
