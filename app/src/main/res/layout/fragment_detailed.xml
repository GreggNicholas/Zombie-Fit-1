<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".Fragment.ExerciseDetailedFragment">

    <TextView
        android:id="@+id/detailedfragment_timer"
        android:layout_width="@dimen/timer_width"
        android:layout_height="@dimen/timer_height"
        android:layout_marginStart="@dimen/timer_marginstart"
        android:layout_marginEnd="@dimen/timer_marginend"
        android:gravity="center"
        android:text="@string/timer_default"
        android:textSize="@dimen/timer_textsize"
        app:layout_constraintBottom_toTopOf="@id/detailedfragment_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/detailedfragment_title"
        android:layout_width="113dp"
        android:layout_height="26dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="284dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detailedfragment_imageview_exercise"
        android:layout_width="351dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/exercise_display"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedfragment_title" />


    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="198dp"
        android:layout_height="37dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="8dp"
        android:outlineSpotShadowColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedfragment_imageview_exercise"
        tools:ignore="UnusedAttribute" />

    <ImageButton
        android:id="@+id/detailedfragment_youtube"
        android:layout_width="47dp"
        android:layout_height="51dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/progressBar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailedfragment_imageview_exercise"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/detailedfragment_desciption"
        android:layout_width="348dp"
        android:layout_height="176dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/detailedfragment_imageview_exercise"
        app:layout_constraintEnd_toEndOf="@+id/detailedfragment_imageview_exercise"
        app:layout_constraintStart_toStartOf="@+id/detailedfragment_imageview_exercise"
        app:layout_constraintTop_toTopOf="@+id/detailedfragment_imageview_exercise" />


</android.support.constraint.ConstraintLayout>